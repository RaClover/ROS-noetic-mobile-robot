<?xml version="1.0"?>
<launch>

  <!-- URDF file for the mobile_robot manipulator -->
  <param name="robot_description" textfile="$(find mobile_robot)/urdf/mobile_manipulator.urdf" />

  <!-- Gazebo post office environment -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="/home/raheeb/catkin_ws/src/mobile_robot/worlds/postoffice.world"/>
  </include>

  <!-- Spawn the robot model -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -x 0 -y 0 -z 1 -model mobile_robot" />
  
  <!-- Load robotic arm controller and parameters -->
  <rosparam command="load" file="$(find mobile_robot)/config/arm_control.yaml" />
  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>
  
  <!-- Load wheeled base controller and parameters --> 
  <rosparam command="load" file="$(find mobile_robot)/config/joint_state_controller.yaml" />
  <node name="joint_state_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn joint_state_controller" respawn="false" output="screen"/>
  <rosparam command="load" file="$(find mobile_robot)/config/control.yaml" />
  <node name="base_controller_spawner" pkg="controller_manager" type="spawner" args="robot_base_joint_publisher robot_base_velocity_controller"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen"/>

</launch>
